<div class="row basic_pro_account_form_page">
  
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
      <h1 class="text-center">Pro Account</h1>
      <p class="text-center">Sing up for pro account for $10/moth and get access to the community and cnd contact information!</p>
    <% else %>
      <h1 class="text-center">Basic Account</h1>
      <p class="text-center">Sing up for free and get basic access to the comunity.</p>
    <% end %>
  </div>
  
  <div class="col-md-6 col-md-offset-3">
    <div class="well registration_form_style">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
         <%= render "pro_form" %>
      <% else %>
          <%= render "basic_form" %>
      <% end %>
      
     
      <%= link_to "Log In", new_user_session_path, :remote => true, method: :get , 'data-toggle' => "modal", 'data-target' => "#myModal" %><br />
      </div>
</div>
</div>
