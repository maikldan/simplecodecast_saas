<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'basic_form'}) do |f| %>
        <%= devise_error_messages! %>
        
        <%= hidden_field_tag 'plan', params[:plan] %>
        
        <div class="field form-group">
          <label for="email">Email:</label>
          <%= f.email_field :email, autofocus: true, class: 'form-control', title: "Va rugam scriti emailu corect pentru a primi noutati de la noi" %>
        </div>
      
        <div class="field form-group">
          <label for="password">Password:</label>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', title: "Parola trebuie sa contina minim 8 caractere" %>
        </div>
      
        <div class="field form-group">
          <label for="user_password_confirmation">Password Confirm:</label>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',title: "Introduceti parola identic cu cea precedenta" %>
        </div>
      
        <div class="actions form-group">
          <%= f.submit "Sign up", class: 'submit_product_form' %>
        </div>
<% end %>