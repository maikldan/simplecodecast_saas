<main class="container shop">
        <section class="row shop_sec_1">
            
                <div class="col-md-6  shop_sec_1_1">
                    <img src="<%= @products.last.image %>" alt="" class="shop_sec_1_img">
                </div>
                <div class="col-md-4 col-md-offset-1 shop_sec_1_2">
                    <p>
                       <%= @products.last.review %>
                    </p>
                    <span class="shop_sec_1_2_price">
                        <%= number_to_currency @products.last.price %>
                    </span>
                 
                    <%= link_to 'Buy It Now!', @products.last, class: 'shop_sec_1_2_button' %>
                </div>
           
        </section>
        <section class="row shop_content">
            <div class="shop_header_min">
                <div class="col-md-2">
                    <h1 class="shop_header_h1">
                    Shop Departament
                </h1>
                </div>
                <form class="col-md-4 col-md-offset-6" role="search">
                    <div class="form-group">
                        <input type="text" class="form-search" placeholder="Search">
                    </div>
                    <button type="submit" class="form_search_button">Submit</button>
                </form>
                <div class="clearfix"></div>
            </div>
            <div class="row shop_container">
                <div class="col-md-3">
                    <form action="" class="product_nav">
                        <h2 class="product_nav_header">Navigation</h2>
                        <ul class="product_navigation">
                            <li><a href="">Smartphones</a></li>
                            <li><a href="">Tablets</a></li>
                            <li><a href="">Laptop</a></li>
                            <li><a href="">SmartWach</a></li>
                            <li><a href="">Watces</a></li>
                        </ul>
                    </form>
                </div>
                <div class="col-md-9">
                <% @products.each do |product| %>
                    <div class="col-md-4 product_figure">
                        <%= link_to product.name, product, class: 'product_link' %>
                        <div class="product_form">
                            <%= image_tag product.image.thumb, class: 'product_img' %>
                        </div>
                        <span class="product_price"><%= number_to_currency product.price %></span>
                        
                        <button class="product_buy">Add To Card</button>
                    </div>
                <% end %>
                </div>
            </div>
            <% if current_user ==  @admin_user %>
                <%= link_to 'New Product', new_product_path, class: 'item_info_add_button' %>
            <% end %>
        </section>
    </main>