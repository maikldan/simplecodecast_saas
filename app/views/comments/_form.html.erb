<div class="row">
    <div class="comment-wrapper">
                <div class="comment-box-wrapper">
                  <%= form_for([@product, @product.comments.build]) do |f| %>
                    <div class="form-group">
                      <%= f.text_area :comment_text, class: "comment_text_area" %>
                    </div>
                    <div class="form-group">
                      <%= f.submit "Create Comment", :id => "save-button",class: "comment_submit_button" %>
                    </div>
                  <% end %>
                </div>
        </div>
</div>